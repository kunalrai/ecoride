{
  "info": {
    "name": "EcoRide API",
    "description": "Complete API collection for EcoRide carpooling backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup - Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+919876543210\",\n  \"name\": \"John Doe\"\n}"
            },
            "url": "{{base_url}}/auth/signup"
          }
        },
        {
          "name": "Verify Signup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+919876543210\",\n  \"name\": \"John Doe\",\n  \"otp\": \"123456\"\n}"
            },
            "url": "{{base_url}}/auth/verify-signup"
          }
        },
        {
          "name": "Login - Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+919876543210\"\n}"
            },
            "url": "{{base_url}}/auth/login"
          }
        },
        {
          "name": "Verify Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+919876543210\",\n  \"otp\": \"123456\"\n}"
            },
            "url": "{{base_url}}/auth/verify-login"
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/auth/profile"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Smith\",\n  \"email\": \"john@example.com\",\n  \"company\": \"TechCorp\",\n  \"gender\": \"MALE\"\n}"
            },
            "url": "{{base_url}}/auth/profile"
          }
        }
      ]
    },
    {
      "name": "Vehicles",
      "item": [
        {
          "name": "Add Vehicle",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vehicleType\": \"CAR\",\n  \"make\": \"Honda\",\n  \"model\": \"City\",\n  \"year\": 2020,\n  \"color\": \"White\",\n  \"licensePlate\": \"MH12AB1234\",\n  \"seats\": 4\n}"
            },
            "url": "{{base_url}}/auth/vehicles"
          }
        },
        {
          "name": "Get Vehicles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/auth/vehicles"
          }
        }
      ]
    },
    {
      "name": "Rides",
      "item": [
        {
          "name": "Create Ride",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vehicleId\": \"vehicle_uuid_here\",\n  \"startLat\": 19.0760,\n  \"startLng\": 72.8777,\n  \"startAddress\": \"Mumbai Central\",\n  \"endLat\": 18.5204,\n  \"endLng\": 73.8567,\n  \"endAddress\": \"Pune Station\",\n  \"polyline\": \"encoded_polyline_string\",\n  \"departureTime\": \"2024-12-01T09:00:00Z\",\n  \"availableSeats\": 3,\n  \"pricePerSeat\": 250\n}"
            },
            "url": "{{base_url}}/rides"
          }
        },
        {
          "name": "Get My Rides",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/rides?status=SCHEDULED"
          }
        },
        {
          "name": "Start Ride",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/rides/:rideId/start"
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Search Rides",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"startLat\": 19.0760,\n  \"startLng\": 72.8777,\n  \"endLat\": 18.5204,\n  \"endLng\": 73.8567,\n  \"departureTime\": \"2024-12-01T09:00:00Z\",\n  \"seats\": 2,\n  \"maxDeviationKm\": 5,\n  \"timeWindowMinutes\": 30\n}"
            },
            "url": "{{base_url}}/bookings/search"
          }
        },
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rideId\": \"ride_uuid_here\",\n  \"seatsBooked\": 2,\n  \"pickupLat\": 19.0760,\n  \"pickupLng\": 72.8777,\n  \"pickupAddress\": \"Mumbai Central\",\n  \"dropLat\": 18.5204,\n  \"dropLng\": 73.8567,\n  \"dropAddress\": \"Pune Station\"\n}"
            },
            "url": "{{base_url}}/bookings"
          }
        },
        {
          "name": "Get My Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/bookings/my-bookings"
          }
        },
        {
          "name": "Accept Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/bookings/:bookingId/accept"
          }
        },
        {
          "name": "Rate Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 5,\n  \"review\": \"Great ride!\"\n}"
            },
            "url": "{{base_url}}/bookings/:bookingId/rate"
          }
        }
      ]
    },
    {
      "name": "Wallet",
      "item": [
        {
          "name": "Get Wallet",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/wallet"
          }
        },
        {
          "name": "Load Wallet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 1000,\n  \"paymentMethodId\": \"pm_stripe_payment_method_id\"\n}"
            },
            "url": "{{base_url}}/wallet/load"
          }
        },
        {
          "name": "Get Transactions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/wallet/transactions"
          }
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Get Notifications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/notifications"
          }
        },
        {
          "name": "Get Unread Count",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/notifications/unread-count"
          }
        },
        {
          "name": "Mark All as Read",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{base_url}}/notifications/mark-all-read"
          }
        }
      ]
    }
  ]
}
